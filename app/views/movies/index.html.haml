-#  This file is app/views/movies/index.html.haml
%h1 All Movies

# start copyed code
= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.keys.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @checked[rating], :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => "ratings_submit"
  = submit_tag 'Reset', :id => "reset_submit"
# end copyed code

%table#movies
  %thead
    %tr
      %th{:class => @title_header }
        %a{href: movies_path({:sort => "title"}), :id => "title_header" }Movie Title
      %th Rating
      %th{:class => @release_header}
        %a{href: movies_path({:sort => "release"}), :id => "release_date_header" }Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
